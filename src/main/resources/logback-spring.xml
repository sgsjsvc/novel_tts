<!-- src/main/resources/logback-spring.xml -->
<configuration>

    <!-- 控制台输出（保留） -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 自定义 WebSocket Appender -->
    <appender name="WS" class="novel.tts.novel_tts.util.logws.WebSocketAppender" />

    <!-- root logger 同时输出到控制台和 WebSocket -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="WS" />
    </root>
</configuration>
